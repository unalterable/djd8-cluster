{
  "namespace": "staging",
  "imageName": "mongo",
  "containerPort": 27017,
  "env": [
    {
      "name": "MONGO_INITDB_ROOT_USERNAME",
      "valueFrom": { "secretKeyRef": { "name": "mongo-credentials", "key": "username" } }
    },
    {
      "name": "MONGO_INITDB_ROOT_PASSWORD",
      "valueFrom": { "secretKeyRef": { "name": "mongo-credentials", "key": "password" } }
    }
  ]
}
